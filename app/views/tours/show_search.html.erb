<h1 class="page-title">Search Tours</h1>

<%= link_to 'Back', tours_path, :class => "back-link"%>

<%= form_with(model: @tour, local: true, url:tours_path, method: :get) do |form| %>
  <%= hidden_field_tag "search", "true" %>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(["In Future", "Completed", "Canceled"]) %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price, "Price ($)" %>
    <%= form.number_field :price, in: 1.00..1000000.00, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :booking_deadline %>
    <%= form.datetime_select :booking_deadline,include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :from_date, "From Date" %>
    <%= form.date_select :from_date, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :to_date, "To Date" %>
    <%= form.date_select :to_date, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :total_seats, "Total Seats" %>
    <%= form.select :total_seats, (1..1000), include_blank: true %>
  </div>

  <div class="field page-title"><b><h2>Itinerary</h2></b></div>

  <ul class="nested-form-ul">
    <%= form.nested_fields_for :tour_locations do |tour_loc_form| %>
      <li>
        <div class="field">
          <%= tour_loc_form.label :state_or_province, "State/Province" %>
          <%= tour_loc_form.text_field :state_or_province %>
          <%= tour_loc_form.remove_nested_fields_link "Remove", class: "remove-link" %>
        </div>
        <div class="field">
          <%= tour_loc_form.label :country %>
          <%= tour_loc_form.text_field :country%>
        </div>
      </li>
    <% end %>
  </ul>

  <!--  Add Location link-->
  <div class="page-title">
    <%= form.add_nested_fields_link :tour_locations %>
  </div>

  <div class="actions create">
    <%= submit_tag("Search") %>
  </div>
<% end %>
