<div id="clearance" class="sign-up">
  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>

    <div class="email">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit %>
    </div>

    <div class="other-links">
      <% if !signed_in? %>
        <%= link_to "Sign In", sign_in_path %>
      <% end %>
    </div>
  <% end %>
</div>
